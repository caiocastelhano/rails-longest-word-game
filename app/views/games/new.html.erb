<h1 class="p-3">New game</h1>

<h2 class="p-3"><% @letters.each do |letter| %>
    <%= letter %>
  <% end %>
</h2>

<h3 class="p-3">What is the longest word you can find?</h3>

<form action="/score" method="post" data-turbo="false" class="p-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="submit" value="play">
</form>
